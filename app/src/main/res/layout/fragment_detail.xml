<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent">
        <RelativeLayout android:orientation="horizontal"
                      android:layout_height="match_parent"
                      android:layout_width="match_parent">
        <LinearLayout
            android:id="@+id/header_pic"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal"
            android:background="@color/material_primary_punk"/>

        <LinearLayout
            android:id="@+id/header_text"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/header_pic"
            android:background="@color/material_primary_punk"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/movie_title_name"
                android:layout_gravity="right"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#000000"
                android:layout_marginLeft="200dp"
                android:textSize="12pt"
                android:layout_height="match_parent"
                android:layout_width = "match_parent"/>
            <TextView
                android:id="@+id/movie_title"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#000000"
                android:textSize="12pt"
                android:layout_gravity="right"
                android:layout_marginLeft="200dp"
                android:layout_height="match_parent"
                android:layout_width = "match_parent"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile_pic"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:layout_alignBottom="@+id/header_text"
            android:gravity="left"
            android:layout_marginLeft="35dp"
            android:background="@color/material_primary_punk"
            android:layout_marginBottom="35dp"
            android:orientation="horizontal"/>


    </RelativeLayout>


    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:background="@color/material_accent_punk"
        app:layout_anchor="@id/header_pic"
        app:layout_anchorGravity="bottom|right|end"/>

</android.support.design.widget.CoordinatorLayout>